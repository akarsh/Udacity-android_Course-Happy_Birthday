<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/androidparty"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop" />

    <TextView android:text="@string/happy_birthday" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/happybirthday"
        android:textSize="32sp" android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white" android:padding="20dp" />

    <TextView android:text="@string/sender_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" android:id="@+id/sendername"
        android:textSize="32sp" android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white" android:layout_margin="20dp" />

</RelativeLayout>
